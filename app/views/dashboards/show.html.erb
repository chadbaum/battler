<h1><%= @character.name %></h1>
<br />

<div class='container'>

  <div class='row'>

    <div class='panel active-job-panel col-xs-12 col-md-6 col-md-offset-1'>
      <h3 class='text-center'><%= @character.active_job_name %></h3>
      <%= image_tag @character.active_job_portrait, class: 'active-job-panel-portrait' %>
    </div>

    <div class='panel jobs-panel col-xs-12 col-md-4'>
      <h3 class='text-center'>Jobs</h3>
      <table>
        <% @character.list_jobs.each do |job_level| %>
          <tr>
            <td width=300><%= "#{job_level[0]}:" %></td>
            <td><%= "#{job_level[1]}" %></td>
          </tr>
        <% end %>
        <!-- <%= simple_form_for @character do |f| %>
          <%= f.association :character_jobs, collection: CharacterJob.where(character_id: @character) %>
          <%= f.button :submit %>
        <% end %> -->
      </table>
    </div>

  </div>

  <div class='row'>

    <div class='panel inventory-panel col-xs-12 col-md-2'>
      <h3 class='text-center'>Inventory</h3>
      <table>
        <% @character.list_inventory.each do |item_quantity| %>
          <tr>
            <td width=300><%= "#{item_quantity[0]}:" %></td>
            <td><%= "#{item_quantity[1]}" %></td>
          </tr>
        <% end %>
      </table>
    </div>

  </div>

</div>
