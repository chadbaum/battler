<h1>Characters</h1>
<br />
<% @characters.each do |character| %>
  <div class="character-card">
    <%= image_tag "/assets/sprites/#{character.active_job_alias}/south.gif" %>
    <div class="pull-right">
      <h2><%= link_to character.name, character_path(character) %></h2>
      <div id="character-job">
        <%= "Level #{character.active_job_level} #{character.active_job_name}" %>
      </div>
      <div id="character-jobs">
        <% character.list_jobs.each do |job_pair| %>
          <%= "#{job_pair[0]}:  #{job_pair[1]}" %>
          <br />
        <% end %>
      </div>
    </div>
  </div>
<% end %>
